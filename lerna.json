{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*", "website"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish",
      "allowBranch": ["main"],
      "registry": "https://registry.npmjs.org"
    }
  },
  "ignoreChanges": [
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/__snapshots__/**",
    "**/*.md"
  ]
}
