{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "chore(release): publish",
      "allowBranch": ["main", "canary/*"]
    }
  },
  "ignoreChanges": [
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/__snapshots__/**",
    "**/*.md",
    "**/Kashim/**"
  ]
}
