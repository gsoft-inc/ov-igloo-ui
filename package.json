    "zx": "6.0.7"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": true
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx,jsx}": [
      "prettier --write"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./coverage/target/surefire-reports"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE >= 11"
  ]
}
