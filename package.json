{
  "name": "@igloo-ui/monorepo",
  "private": true,
  "repository": "git+https://github.com/gsoft-inc/ov-igloo-ui.git",
  "author": "Officevibe Inc.",
  "contributors": [
    "Franck franck.gaudin@gsoft.com"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna run build",
    "build:components": "lerna run build --scope=@igloo-ui/*",
    "test": "jest",
    "clean": "npx lerna exec -- rm -rf ./dist",
    "lint": "eslint . --ext .ts,.tsx --quiet",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --quiet",
    "lint:style": "stylelint \"**/*.scss\"",
    "fix:style": "stylelint \"**/*.scss\" --fix",
    "lint:all": "yarn lint && yarn lint:style",
    "fix:all": "yarn lint:fix && yarn fix:style",
    "doc:start": "lerna run dev --scope=docs",
    "doc:build": "lerna run build --verbose --scope=docs && yarn build-storybook -o ./website/.next/storybook",
    "dev": "yarn build:components && yarn storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublish-ci": "yarn build",
    "publish-ci": "npx lerna publish from-package -y",
    "chromatic": "npx chromatic --project-token=CHROMATIC_PROJECT_TOKEN",
    "bootstrap": "node utils/bootstrap/component.mjs && npx lerna bootstrap && yarn fix:all"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@changesets/cli": "2.25.0",
    "@netlify/plugin-nextjs": "4.25.0",
    "@next/bundle-analyzer": "12.3.1",
    "@rollup/plugin-commonjs": "20.0.0",
    "@rollup/plugin-eslint": "8.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@storybook/addon-a11y": "6.5.13",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-docs": "6.5.13",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-interactions": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/addons": "6.5.13",
    "@storybook/jest": "0.0.10",
    "@storybook/react": "6.5.13",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.2",
    "@types/jest": "27.4.0",
    "@types/node": "16.4.10",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "autoprefixer": "10.4.2",
    "babel-jest": "27.5.1",
    "babel-loader": "8.2.5",
    "camelcase": "6.3.0",
    "chromatic": "6.5.3",
    "css-loader": "5.2.7",
    "eslint": "8.22.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.7",
    "husky": "3.1.0",
    "jest": "27.5.1",
    "lerna": "6.0.3",
    "lint-staged": "12.3.4",
    "pascalcase": "2.0.0",
    "postcss": "8.4.5",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-scss": "4.0.3",
    "prettier": "2.4.1",
    "react": "17.0.2",
    "react-docgen-typescript": "2.2.2",
    "react-dom": "17.0.2",
